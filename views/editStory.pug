extends layout
append head
    script(src='/JS/edit-story.js' type='module')
    link(href='/stylesheets/reset.css' rel='stylesheet')
    link(href='/stylesheets/header-footer.css' rel='stylesheet')
    link(href='/stylesheets/story-submit-edit.css' rel='stylesheet')
    link(rel='stylesheet' href='/stylesheets/reset.css')
    body
        div(class="grid-container")
            div(class="Header")
                div(class="left-items")
                    a(href='/users')
                        img(class='miniLogo' src='https://i.imgur.com/IgoFy68.png')
                    a(href='/stories/submit-story' id='submit-story-link-button' class='link-button')
                        img(class='submitStory' src= 'https://i.imgur.com/kh845iH.png?1')
                div(class="right-items")
                    a(href='/users/logout' id='user-profile-button' class='link-button')
                        img(src='https://i.imgur.com/KP11L1y.png?1' class= "logout-button")
                    a(href='/users/profile' id='user-profile-button' class='link-button')
                        img(class= 'profileButton' src = 'https://i.imgur.com/zB0xU1K.png?1')
            div(class="Left-Sidebar")
            div(class="Main-Content")

                div(class="Submit-form")
                    div(id="api-div" class=`${storyId}-${userId}`)
                    div(class='edit-story-container' id='edit-story-container')
                        h3(id="edit-message")
                        ul(id="errors-list")
                        input(type="hidden" name="_csrf" value=csrfToken)
                        input(type="text" name="the_title" placeholder= "Title" class="edit-story-title" id="edit-story-title" required)
                        input(type="text" name="the_story_img" placeholder='Image Url' class="edit-story-img" id="edit-story-img")
                        textArea(type="text" name="the_story_post" placeholder='Your story here' class="edit-story-post" id="edit-story-post" required)
                        button(class='edit-story-button' id='edit-story-button') Update Story

            div(class="Right-Sidebar")
            div(class="Footer")
                //- div(class='creators-info')
                div(class='purple-filter')
                    a(href='https://github.com/jSchutza')
                        div(id='joshDiv')
                            img(src='https://i.imgur.com/8gXNaxd.jpg' id='person-img' class='person-img')
                            p Joshua Schutza
                div(class='purple-filter')
                    a(href='https://github.com/jxnprince')
                        div(id='jacksonDiv')
                            img(src='https://i.imgur.com/O7VszxE.jpg' id='person-img' class='person-img')
                            p Jackson Prince
                div(class='purple-filter')
                    a(href='https://github.com/robert-debug')
                        div(id='robertDiv')
                            img(src='https://i.imgur.com/T1ho184.jpg' id='person-img' class='person-img')
                            p Robert George
                div(class='purple-filter')
                    a(href='https://github.com/TroyD9241')
                        div(id='troyDiv')
                            img(src='https://i.imgur.com/20xUGOw.jpg' id='person-img' class='person-img')
                            p Troy Dawson
