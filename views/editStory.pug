extends layout
append head
    //- script(src='/JS/splash.js' type='module')
    link(rel='stylesheet' href='/stylesheets/reset.css')
    body
      div(class="grid-container")
        div(class="Header")
            div(class="left-items")
                div(id='minilogo')
                a(href='/submit-story' id='submit-story-link-button' class='link-button') Submit Story
            div(class="right-items")
                form(method='POST', action="/users/logout" class="logout")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    button(type="submit") Logout
                a(href='/users/profile' id='user-profile-button' class='link-button') Profile
                div(class="Left-Sidebar")
        div(class="Main-Content")
            div(class="Submit-form")
                form(method='POST' action=`/api/stories/${story.id}`)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    input(type="text" name="title" value=story.title placeholder="Title" required )
                    textArea(type="text" name="postBody" required)= story.postBody
                    button(type="submit") Update Story
        div(class="Right-Sidebar")
        div(class="Footer")
            div(id='app-academy-logo') App Academy Logo
            div(id='creators-info')
                div(id='robert-link')
                    a(href='') Robert's Link/Image
                div(id='jackson-link')
                    a(href='') Jackson's Link/Image
                div(id='troy-link')
                    a(href='') Troy's Link/Image
                div(id='josh-link')
                    a(href='') Josh's Link/Image
